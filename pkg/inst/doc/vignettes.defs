    \begin{minipage}{\linewidth}
      \vspace{0.5\baselineskip}
      #2
    \end{minipage}
};
\node[fill = red, text = white, right=5mm, rounded corners] at (box.north west)
  {\sffamily\bfseries\large #1};
\end{tikzpicture}%
}


## map.identify                            
##

spc <- new ("hyperSpec", spc <- matrix (c (rep (0, 6), 1, rep (0, 5)), ncol = 1))
spc$y <- rep (1 : 4, each = 3)
spc$x <- rep (1 : 3,        4)
spc$z <- spc$y * 3

map.identify (spc) == 7


i <- c (10, 5, 8, 11, 4, 6, 7, 12, 1)
map.identify (spc [i]) == 7

map.identify (spc [i], "y", "x")
map.identify (spc [i], "x", "z")

map.identify (spc[i], "x", "y")


